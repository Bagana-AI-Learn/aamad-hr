# AAMAD Framework Configuration
AAMAD_ADAPTER=crewai

# LLM Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aamad_hr
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aamad_hr
DATABASE_USER=user
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS Configuration (for S3 document storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=aamad-hr-documents

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000/api
BACKEND_URL=http://localhost:8000
PORT=3000
BACKEND_PORT=8000

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# External API Keys (for integrations)
HRIS_API_KEY=your_hris_api_key_here
ATS_API_KEY=your_ats_api_key_here
SERVICENOW_API_KEY=your_servicenow_api_key_here
DOCUSIGN_API_KEY=your_docusign_api_key_here
E_VERIFY_API_KEY=your_e_verify_api_key_here
LMS_API_KEY=your_lms_api_key_here
SLACK_API_TOKEN=your_slack_api_token_here
TEAMS_API_TOKEN=your_teams_api_token_here

# Monitoring and Logging
LOG_LEVEL=INFO
DATADOG_API_KEY=your_datadog_api_key_here
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_STREAMING=true
ENABLE_WEBSOCKET=true
ENABLE_ANALYTICS=false
